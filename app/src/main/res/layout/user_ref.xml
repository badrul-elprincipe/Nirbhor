<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/po"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/vo"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/po"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/name"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/vo"
        android:layout_marginLeft="2dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/bAmount"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/name"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/cuInstallment"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/bAmount"
        android:layout_marginLeft="2dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/ovDue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/cuInstallment"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/outstanding"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/ovDue"
        android:layout_marginLeft="2dp"/>




</RelativeLayout>