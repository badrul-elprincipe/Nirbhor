<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER DATA"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingTop="10dp"/>

    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_below="@+id/txt"
        android:id="@+id/po"
        android:layout_width="57dp"
        android:layout_height="wrap_content"

        android:text="Program officer"
        android:textSize="10dp"

        />

    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:id="@+id/vo"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/po"
        android:text="Village Officer"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />
    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:id="@+id/name"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/vo"
        android:text="Name"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />
    <TextView

        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"

        android:id="@+id/bAmount"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/name"
        android:text="Borrowed Amount"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />
    <TextView

        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"

        android:id="@+id/cuInstallment"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/bAmount"
        android:text="Cumulative Installment"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />

    <TextView

        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"

        android:id="@+id/ovDue"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/cuInstallment"
        android:text="Overdue"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />
    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        android:paddingTop="25dp"

        android:id="@+id/outstanding"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/ovDue"
        android:text="Outstanding"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listView"
        android:layout_below="@+id/po"
        android:layout_width="match_parent"
        android:layout_height="450dp">

    </ListView>


    <Button
        android:id="@+id/bt"
        android:layout_marginTop="30dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/listView"
        android:background="@drawable/button_background2"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:textSize="18sp"
        android:textColor="#FEFEFE"
        android:onClick="backcccc"
        />

</RelativeLayout>