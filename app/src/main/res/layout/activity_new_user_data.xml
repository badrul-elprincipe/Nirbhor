<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserDataActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applied Users"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingTop="10dp"/>

    <TextView
        android:textStyle="bold"
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"
        android:layout_below="@+id/txt"
        android:id="@+id/name"
        android:layout_width="57dp"
        android:layout_height="wrap_content"

        android:text="Name"
        android:textSize="10dp"

        />

    <TextView
        android:textStyle="bold"
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"
        android:id="@+id/yIncome"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/name"
        android:text="Yearly Encome"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />
    <TextView

        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"
        android:id="@+id/plRecords"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/yIncome"
        android:text="Previously Loan Records"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        />
    <TextView

        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"

        android:id="@+id/fMember"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/plRecords"
        android:text="Family Members"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        />
    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"

        android:id="@+id/character"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/fMember"
        android:text="Character"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        />

    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"

        android:id="@+id/crReport"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/character"
        android:text="Criminal Report"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        />
    <TextView
        android:background="@drawable/customized_textview"
        android:textColor="#FEFEFE"
        android:paddingTop="25dp"
        android:textStyle="bold"
        android:id="@+id/poOpinion"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_toRightOf="@+id/crReport"
        android:text="PO's Opinion"
        android:textSize="10dp"

        android:layout_marginLeft="2dp"
        />


    <ListView

        android:layout_marginTop="35dp"
        android:id="@+id/listView2"
        android:layout_below="@+id/poOpinion"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >

    </ListView>


    <Button
        android:id="@+id/bt"
        android:layout_marginTop="30dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/listView2"
        android:background="@drawable/button_background2"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:textSize="18sp"
        android:textColor="#FEFEFE"
        android:onClick="backbbb"
        />

</RelativeLayout>